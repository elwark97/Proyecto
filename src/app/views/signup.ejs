<% include header %>
    <div class="row">
    <div class="col-md-6 mt-4 text-center">
    <table class="table table-striped table-bordered">
    <tr>
    <th>ID</th>
    <th>Producto</th>
    <th>Cantidad</th>
    <th>Acción</th>
    </tr>
    <% for (var i = 0; i < news.length; i ++) { %>
    <tr>
    <td><%= productos[i].id_producto %></td>
    <td><%= productos[i].nombre_producto %></td>
    <td><%= productos[i].Cantidad %></td>
    <td>
        <a href="/productos/eliminar/<%= productos[i].id_producto %>" class="btn btn-danger">Eliminar</a>
        <a href="/productos/updateProductos/<%= productos[i].id_producto %>" class="btn btn-info">Actualizar</a>


    </td>
    </tr>

    <% } %>
    </table>
    </div>
    <div class="col-md-6 mt-4 card">
    <form class="card-body" action="/news/add" method="post">
    <h3 class="card-title">Agregar Productos</h3>
    <div class="form-group">
    <input name="title" type="text" class="form-control"
    placeholder="Nuevo Título">
    </div>
    <div class="form-group">
    <input name="news" type="text" class="form-control"
    placeholder="Nuevo Contenido">
    </div>
    <input type="submit" class="btn btn-primary">
    </form>
    </div>
    </div>
    <% include footer %>
   